{
    // time between each check (seconds)
    "default-internal-time":900,
    // 1 -> Email
    // 2 -> IFTTT
    // 3 -> Telegram
    "send_Mode":1,
    "email": {
        "smtp_url": "smtp.gmail.com:587",
        // sender gmail
        "sender": "myemail@mail.com",
        "sender-password": "myPassword",
        // receivers emails (full format, can be mutiple)
        "receivers": ["receiverEmail@mail.com","receiverEmail2@mail.com"]
    },
    "IFTTT": {
        "key": "IFTTT_KEY",
        "eventName": "IFTTT_EVENT_NAME"
    },
    "Telegram": {
        "botToken": "TOKEN",
        "chatId": "CHAT_ID"
    },
    // amazon base url
    "amazon-base_url": "https://www.amazon.com/dp/",
    "xpath_selector" : {
        "price": "//*[@id='priceblock_ourprice']",
        "productname": "//span[@id='productTitle']"
    },
    "item-to-parse": [
        // item id , your expected price, productname(optional)
        ["id1_abcd" , 65 , "Item 1"],
	["id2_efgj" , 20 , "Item 2"]
    ]
}
